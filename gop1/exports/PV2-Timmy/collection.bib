	journaltitle = {Solar Energy Materials and Solar Cells},
	shortjournal = {Solar Energy Materials and Solar Cells},
	author = {Gao, Tian and Yang, Qing and Guo, Xueqi and Huang, Yuqing and Zhang, Zhi and Wang, Zhixue and Liao, Mingdun and Shou, Chunhui and Zeng, Yuheng and Yan, Baojie and Hou, Guofu and Zhang, Xiaodan and Zhao, Ying and Ye, Jichun},
